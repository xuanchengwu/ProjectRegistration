@model WebApplication.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserRegister</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <!-- Navbar content -->
        <div class="container-fluid">
            <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar7">

                @Html.Partial("_loginPartialView")
            </div>
            </div>
</nav>
    @*@Html.Partial("_loginPartialView")*@
    <section class="gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Login</h3>
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                <div class="row align-items-center pt-4 pb-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">@Html.LabelFor(m => m.User_Email)</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        @*<input type="text" name="UserName" class="" />*@
                                        @Html.TextBoxFor(m => m.User_Email, new { @class = "form-control form-control-lg" })
                                        @Html.ValidationMessageFor(m => m.User_Email, null, new { @class = "text text-danger" })

                                    </div>
                                </div>
                                <div class="row align-items-center pt-4 pb-3">
                                    <div class="col-md-3 ps-5">

                                        <h6 class="mb-0">@Html.LabelFor(m => m.User_Password)</h6>

                                    </div>
                                    <div class="col-md-9 pe-5">

                                        @*<input type="text" name="UserName" class="" />*@
                                        @Html.PasswordFor(m => m.User_Password, new { @class = "form-control form-control-lg" })
                                        @Html.ValidationMessageFor(m => m.User_Password, null, new { @class = "text text-danger" })

                                    </div>
                                </div>
                                <div class="mt-4 pt-2">
                                    <input class="btn btn-primary btn-lg" type="submit" value="Login" />
                                </div>
                                @Html.ValidationMessage("Error", null, new { @class = "text text-danger" })

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <style>
        /*.gradient-custom {*/
            /* fallback for old browsers */
            /*background: #f093fb;
            background: -webkit-linear-gradient(to bottom right, rgba(0,0,128,1),rgba(135,206,250,1));*/
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            /*background: linear-gradient(to bottom right, rgba(0,0,128,1),rgba(135,206,250,1));
        }*/

        .card-registration .select-input.form-control[readonly]:not([disabled]) {
            font-size: 1rem;
            line-height: 2.15;
            padding-left: .75em;
            padding-right: .75em;
        }

        .card-registration .select-arrow {
            top: 13px;
        }
        html, body {
            margin: 0;
            padding: 0;
        }

        html {
            height: 100%
        }

        body {
            min-height: 100%;
            background: #f093fb;
            background: -webkit-linear-gradient(to bottom right, rgba(0,0,128,1),rgba(135,206,250,1));
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to bottom right, rgba(0,0,128,1),rgba(135,206,250,1));
        }
    </style>
</body>
</html>




